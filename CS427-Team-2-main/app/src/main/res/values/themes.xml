<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyFirstApp.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/darker_blue</item>
        <item name="spinnerStyle">@style/CustomSpinnerStyleDarkBrown</item>
        <item name="colorOnPrimary">@color/soft_white</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/darker_blue</item>
        <item name="colorOnSecondary">@color/soft_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/darker_blue</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/darker_blue</item>
        <item name="android:textColorPrimary">@color/beige</item>
        <item name="android:button">@color/light_blue</item>
        <item name="android:textColorSecondary">@color/beige</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/beige</item>
    </style>

    <!-- Light Yellow Theme -->
    <style name="Theme.MyFirstApp.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/light_yellow</item>
        <item name="colorPrimaryVariant">@color/darker_yellow</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <item name="spinnerStyle">@style/CustomSpinnerStyleLightYellow</item>
        <item name="colorSecondary">@color/dark_yellow</item>
        <item name="colorSecondaryVariant">@color/black_primary</item>
        <item name="colorOnSecondary">@color/text_color_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/very_light_yellow</item>
        <item name="android:textColorPrimary">@color/black_primary</item>
        <item name="android:button">@color/dark_yellow</item>
        <item name="android:textColorSecondary">@color/grey_dark</item>
        <item name="android:textColor">@color/black_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="actionMenuTextColor">@color/black_primary</item>
        <item name="android:textColorPrimaryInverse">@color/dark_grey</item>

    </style>


    <!-- Purple Theme -->
    <style name="Theme.MyFirstApp.Purple" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="colorPrimaryVariant">@color/background_dark_blue</item>
        <item name="colorOnPrimary">@color/text_color_light</item>
        <item name="spinnerStyle">@style/CustomSpinnerStylePurple</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorSecondaryVariant">@color/highlight_yellow</item>
        <item name="colorOnSecondary">@color/text_color_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/background_dark_blue</item>
        <item name="android:textColorPrimary">@color/text_color_light</item>
        <item name="android:button">@color/button_background</item>
        <item name="android:textColorSecondary">@color/grey_light</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>